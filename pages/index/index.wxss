/**index.wxss**/
.container {
  background-color: #F2f2f2;
  min-height: 100%;
  display: 100%;
}
/* 轮播图 */
.swiper-container {
  width: 750rpx;
  position: relative;
}
.swiper_box {
  width: 100%;
  height: 562.5rpx;
}
swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 562.5rpx;
}

/* 类型tab */
.type-container {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
}
.type-navbar {
  width: 100%;
  height: 88rpx;
  white-space: nowrap;
  background-color: #fff;
}
.type-box {
  display: inline-block;
  overflow: hidden;
  width: 160rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
}

.type-navbar-item{
  border-bottom: 4rpx solid #fff;
}
.type-item-on{
  border-bottom: 4rpx solid #e64340;
}

/* 公告轮播 */
.notice {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 10rpx;
  width: 750rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
}
.notice_iteml {
  padding-left: 25rpx;
  width: 80rpx;
  font-size: 26rpx;
  color: #999;
}
.notice_swiper {
  flex: 1;
  height: 80rpx;
  width: 635rpx;
  
}
.notice_itemer {
  padding-left: 10rpx;
  width: 635rpx;
  color: #e64340;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 优惠券 */
.coupons {
  width: 100%;
  height: 200rpx;
  margin-top: 10rpx;
  overflow: hidden;
}
.coupons-scroll {
  width: 100%;
  height: 200rpx;
  background: #fff;
  white-space: nowrap;
}
.coupons-item {
  margin: 10rpx 0 10rpx 10rpx;
  display: inline-block;
  box-sizing: border-box;
  padding: 10rpx;
  overflow: hidden;
  width: 300rpx;
  height: 180rpx;
  background: #f1a83b;
  border-radius: 6rpx;
  font-size: 20rpx;
  line-height: 35rpx;
  color: #fff;
}
.coupons-item:last-child {
  margin-right: 10rpx;
}
.coupons-item view {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 商品列表 */
.goods-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding: 20rpx;
}
.goods-container .goods-box {
  width: 345rpx;
  height: 472rpx;
  background: #fff;
  overflow: hidden;
  margin-bottom: 20rpx;
  font-size: 0;
}
.goods-container .goods-box .img {
  width: 345rpx;
  height: 345rpx;
  overflow: hidden;
}
.goods-container .good_name {
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  color:#000;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.goods-container .good_price {
  display: flex;
  margin-left: 20rpx;
  margin-top: 30rpx;
  font-size: 24rpx;
  height: 28rpx;
  line-height: 28rpx;
  color: #e64340;
}
.goods-container .good_price .price_original {
  margin-left: 20rpx;
  font-size: 20rpx;
  color: #999;
  text-decoration: line-through;
}
.goods-container .price_min span{
  font-size: 28rpx;
}

/* 底部没有更多了 */
.no-more-goods {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx 40rpx;
  font-size: 0;
}
.no-more-goods .line {
  flex: 1;
  height: 2rpx;
  background: #eee;
}
.no-more-goods .text {
  font-size: 24rpx;
  color: #ccc;
  padding: 0 24rpx;
}

/* 搜索框 */
.search-view {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background: gray;
}
.search-content {
  display: flex;
  /* justify-content: center; */
  align-items: center;
  box-sizing: border-box;
  width: 650rpx;
  margin: auto;
  height: 70rpx;
  border-radius: 10rpx;
  background: #fff;
  padding: 10rpx 0px 10rpx 10rpx;
}
.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.search-input {
  width: 436rpx;
  font-size: 28rpx;
}
.search-button {
  width: 150rpx;
  height: 70rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border-radius: 0px 10rpx 10rpx 0;
  background: rgb(194, 164, 221);
  border: none;
  color: #fff;
}