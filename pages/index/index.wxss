/**index.wxss**/
.container {
  background-color: #F2f2f2;
  min-height: 100%;
  display: 100%;
}
/* 轮播图 */
.swiper-container {
  width: 750rpx;
  position: relative;
}
.swiper_box {
  width: 100%;
  height: 562.5rpx;
}
swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 562.5rpx;
}

/* 类型tab */
.type-container {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
}
.type-navbar {
  width: 100%;
  height: 88rpx;
  white-space: nowrap;
  background-color: #fff;
}
.type-box {
  display: inline-block;
  overflow: hidden;
  width: 160rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
}

.type-navbar-item{
  border-bottom: 4rpx solid #fff;
}
.type-item-on{
  border-bottom: 4rpx solid #e64340;
}

/* 公告轮播 */
.notice {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 10rpx;
  width: 750rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
}
.notice_iteml {
  padding-left: 25rpx;
  width: 80rpx;
  font-size: 26rpx;
  color: #999;
}
.notice_swiper {
  flex: 1;
  height: 80rpx;
  width: 635rpx;
  
}
.notice_itemer {
  padding-left: 10rpx;
  width: 635rpx;
  color: #e64340;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}